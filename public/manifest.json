  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone", "browser"],
  "protocol_handlers": [
    {
      "protocol": "web+atlas",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".pdf", ".csv", ".json"]
        }
      ]
    }
  },
  "permissions": [
    "geolocation",
    "notifications",
    "background-sync",
    "persistent-storage"
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.atlassanctum.app",
      "id": "com.atlassanctum.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/atlas-sanctum/id123456789",
      "id": "123456789"
    }
  ]
}
